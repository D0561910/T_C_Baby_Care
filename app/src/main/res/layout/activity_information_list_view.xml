<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InformationListView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/tv_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20px"
            android:textColor="@color/A364958"
            android:textSize="80px" />

        <TextView
            android:id="@+id/tv_Info_contextA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/A364958"
            android:layout_margin="20px"
            android:textSize="40px" />

        <TextView
            android:id="@+id/tv_Info_contextB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/A364958"
            android:layout_margin="20px"
            android:textSize="40px" />

        <TextView
            android:id="@+id/tv_Info_contextC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/A364958"
            android:layout_margin="20px"
            android:textSize="40px" />

        <TextView
            android:id="@+id/tv_Info_contextD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/A364958"
            android:layout_margin="20px"
            android:textSize="40px" />

        <TextView
            android:id="@+id/tv_Info_contextE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/A364958"
            android:layout_margin="20px"
            android:textSize="40px" />

        <TextView
            android:id="@+id/tv_Info_contextF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/A364958"
            android:layout_margin="20px"
            android:textSize="40px" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>